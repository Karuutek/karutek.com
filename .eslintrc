{
    "extends": [
        "plugin:react/recommended",
        "plugin:@typescript-eslint/eslint-recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "settings": {
        "react": {
            "pragma": "React",
            "version": "detect",
            "flowVersion": "0.53"
        }
    },
    "overrides": [
        {
            "files": [
                "*.js",
                "*.jsx"
            ],
            "rules": {
                "@typescript-eslint/explicit-function-return-type": "off"
            }
        }
    ],
    "rules": {
        "no-restricted-imports": [
            "error",
            {
                "patterns": [
                    "@material-ui/*/*/*",
                    "!@material-ui/core/test-utils/*"
                ]
            }
        ]
    }
}
